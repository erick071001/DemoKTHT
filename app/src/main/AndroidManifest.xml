<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ebenezer.gana.shoppyv2">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_vector_cart"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_vector_cart"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_config"
        android:theme="@style/Theme.Shoppy">
        <activity
            android:name="com.ebenezer.gana.shoppyv2.ui.activities.DashboardActivity"
            android:exported="true"
            android:label="@string/title_activity_dashboard"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.ebenezer.gana.shoppyv2.ui.activities.MyOrderDetailsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:noHistory="true"
            android:theme="@style/Theme.Shoppy.NoActionBar" />


        <activity
            android:name="com.ebenezer.gana.shoppyv2.ui.activities.CartListActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Shoppy.NoActionBar" />
        <activity
            android:name="com.ebenezer.gana.shoppyv2.ui.activities.ProductDetailsActivity"
            android:exported="false"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Shoppy.NoActionBar" />



        <activity
            android:name="com.ebenezer.gana.shoppyv2.ui.activities.BaseActivity"
            android:exported="false" />

        <activity
            android:name="com.ebenezer.gana.shoppyv2.ui.activities.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
    </application>

</manifest>